@model Panel.Models.TBLHizmet

@using (Html.BeginForm("_OdemeBildirimGonder", "Panel", FormMethod.Post))
            {
    <div class="modal-body">
        <div class="form-group">
            <label>Ödeme Yönteminiz Neydi?</label>
            <select class="form-control select2" name="OdemeYontem" id="OdemeYontem" style="width: 100%;">
                @foreach (var y in ViewBag.Yontem)
                {
                    <option value="@y.Yontem">@y.Yontem</option>
                }
            </select>
        </div>
        <div class="form-group">
            <label>Hangi Hesaba Yatırdınız</label>
            <select class="form-control select2" name="OdemeBanka" id="OdemeBanka" style="width: 100%;">
                @foreach (var b in ViewBag.Bankalar)
                {
                    <option value="@b.BankaAdi">@b.BankaAdi</option>
                }
            </select>
        </div>
        <div class="form-group">
            <label>Gönderen Ad Soyad</label>
            <div class="input-group">
             
                <input type="text" class="form-control" placeholder="Gönderen Ad Soyad" id="AdSoyad" name="AdSoyad">
            </div>
        </div>
        <div class="form-group">
            <label>Ödeme Tutarı</label>
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text">₺</span>
                </div>
                <input type="text" class="form-control" placeholder="Ödeme Tutarı" id="Tutar" name="Tutar">
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Çık</button>
        <button type="submit" class="btn btn-success">Gönder</button>
    </div>
}
