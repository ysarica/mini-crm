

@using (Html.BeginForm("_SohbetGonder", "Panel", FormMethod.Post, new { @class = "form-horizontal", @id = "form_sample_1", @enctype = "multipart/form-data" }))
{

    <div class="card-body">

        <div class="form-group">
            <textarea id="compose-textarea" name="compose" class="form-control" style="height: 300px"></textarea>
        </div>
        <div class="form-group">
            <div class="btn btn-default btn-file">
                <i class="fas fa-paperclip"></i> Dosya
                <input type="file" name="attachment" id="attachment">
            </div>
            <p class="help-block">Dosyayı Sıkıştırarak Yükleyin</p>
        </div>


    </div>
    <div class="card-footer">
        <button type="submit" class="btn btn-primary">Gönder</button>
    </div>
}