<div class="col-md-3">
    <button type="button" class="btn btn-primary btn-block mb-3" data-toggle="modal" data-target="#MesajOlustur">Mesaj Oluştur</button>

    <div class="modal fade bd-example-modal-lg" id="MesajOlustur" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Mesaj Oluştur</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                @Html.Action("_MesajOlustur", "Panel")

            </div>
        </div>
    </div>




    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Folders</h3>
            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                    <i class="fas fa-minus"></i>
                </button>
            </div>
        </div>
        <div class="card-body p-0">
            <ul class="nav nav-pills flex-column">
                <li class="nav-item active">
                    <a href="/Panel/Mesajlar/" class="nav-link">
                        <i class="fas fa-inbox"></i> Gelen Kutusu
                        @if (Convert.ToInt32(ViewBag.Alinan)!=0)
                        {
                            <span class="badge bg-primary float-right">@ViewBag.Alinan </span>
                        }

                       
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/Panel/GonderilenMesaj/" class="nav-link">
                        <i class="far fa-envelope"></i> Gönderilen
                        @if (Convert.ToInt32(ViewBag.Gonderilen) != 0)
                        {
                            <span class="badge bg-primary float-right">@ViewBag.Gonderilen </span>
                        }
                        </a>
                </li>
                <li class="nav-item">
                    <a href="/Panel/SilinenMesaj/" class="nav-link">
                        <i class="far fa-file-alt"></i> Silinen
                    </a>
                </li>

            </ul>
        </div>
        <!-- /.card-body -->
    </div>
